<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SciVerse"
        tools:targetApi="31">
        <activity
            android:name=".PhoneAuthentication.OTPActivity"
            android:exported="false"
            android:label="@string/title_activity_otpactivity" />
        <activity
            android:name=".PhoneAuthentication.PhoneLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_phone_login" />
        <activity
            android:name=".CustomAuthentication.CustomLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_custom_login" />
        <activity
            android:name=".CustomAuthentication.CustomSigninActivity"
            android:exported="true"
            android:label="@string/title_activity_google_login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:exported="false"
            android:label="SciVerse">
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>