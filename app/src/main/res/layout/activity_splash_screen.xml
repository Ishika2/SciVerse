<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:orientation="horizontal">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/text_animation_final"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textCreated"/>

    <TextView
        android:id="@+id/textCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel"
        android:text="Created by"
        app:layout_constraintBottom_toTopOf="@+id/scf_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gif_text" />

    <ImageView
        android:id="@+id/scf_logo"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/scfbio_lab_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iitdelhi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/iitdelhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel"
        android:text="IIT DELHI"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageIIT"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="70dp"/>

    <ImageView
        android:id="@+id/imageIIT"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/indian_institute_of_technology_delhi_logo"
        app:layout_constraintBottom_toTopOf="@id/iitdelhi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scf_logo"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>